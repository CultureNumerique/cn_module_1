        <!-- Contenu de la section -->
        <presentation>
          <!-- Enoncé  -->
          <material>
            <mattext texttype="text/html"><![CDATA[<p>Pourquoi faut-il représenter les textes, images, son, etc.  par des nombres dans un ordinateur ?</p>]]></mattext>
          </material>
          <!--  Réponses possibles -->
          <response_lid rcardinality="Single" ident="I_130EE218">
            <render_choice shuffle="No">
              <response_label ident="I_8DCF7AB6">
                <material>
                  <mattext texttype="text/html"><![CDATA[<p>C'est un choix industriel.</p>]]></mattext>
                </material>
              </response_label>
              <response_label ident="I_2B351384">
                <material>
                  <mattext texttype="text/html"><![CDATA[<p>Les ordinateurs ont été inventés par des mathématiciens.</p>]]></mattext>
                </material>
              </response_label>
              <response_label ident="I_A6469B0F">
                <material>
                  <mattext texttype="text/html"><![CDATA[<p>Tout ordinateur est fondamentalement une machine qui calcule avec des nombres.</p>]]></mattext>
                </material>
              </response_label>
            </render_choice>
          </response_lid>
        </presentation>
        <!-- Responses settings -->
        <resprocessing>
          <outcomes>
            <decvar varname="SCORE" vartype="Decimal" minvalue="0" maxvalue="100"/>
          </outcomes>
          <respcondition title="General feedback" continue="Yes">
            <conditionvar>
              <other/>
            </conditionvar>
            <displayfeedback feedbacktype="Response" linkrefid="general_fb"/>
          </respcondition>
          <respcondition title="Correct" continue="No">
            <conditionvar>
              <varequal respident="I_130EE218">I_A6469B0F</varequal>
            </conditionvar>
            <setvar varname="SCORE" action="Set">100</setvar>
            <displayfeedback feedbacktype="Response" linkrefid="I_A6469B0F_fb"/>
          </respcondition>
          <respcondition continue="No">
            <conditionvar>
              <varequal respident="I_130EE218">I_8DCF7AB6</varequal>
            </conditionvar>
            <setvar varname="SCORE" action="Set">0</setvar>
            <displayfeedback feedbacktype="Response" linkrefid="I_8DCF7AB6_fb"/>
          </respcondition>
          <respcondition continue="No">
            <conditionvar>
              <varequal respident="I_130EE218">I_2B351384</varequal>
            </conditionvar>
            <setvar varname="SCORE" action="Set">0</setvar>
            <displayfeedback feedbacktype="Response" linkrefid="I_2B351384_fb"/>
          </respcondition>
        </resprocessing>
        <!-- Feedbacks correspondant à chaque réponse possible -->
        <itemfeedback ident="I_8DCF7AB6_fb">
          <flow_mat>
            <material>
              <mattext texttype="text/html"><![CDATA[<p>Non, les industriels n'avaient pas le choix.</p> <p>Votre réponse est incorrecte.</p> ]]></mattext>
            </material>
          </flow_mat>
        </itemfeedback>
        <itemfeedback ident="I_2B351384_fb">
          <flow_mat>
            <material>
              <mattext texttype="text/html"><![CDATA[<p>Non, les mathématiciens savent manipuler autre-chose que des nombres, et les ordinateurs sont le fruit de l'interaction entre de nombreuses sciences.</p> <p>Votre réponse est incorrecte.</p> ]]></mattext>
            </material>
          </flow_mat>
        </itemfeedback>
        <itemfeedback ident="I_A6469B0F_fb">
          <flow_mat>
            <material>
              <mattext texttype="text/html"><![CDATA[<p>Oui, comme un ordinateur ne manipule que des nombres, tout doit être représenté sous forme de nombres pour qu'un ordinateur puisse le manipuler.</p> <p>Votre réponse est correcte.</p> ]]></mattext>
            </material>
          </flow_mat>
        </itemfeedback>
        <itemfeedback ident="general_fb">
          <flow_mat>
            <material>
              <mattext texttype="text/html"><![CDATA[<p>Un ordinateur ne manipule que des nombres, tout doit donc être représenté sous forme de nombres pour qu'il puisse le manipuler.</p> ]]></mattext>
            </material>
          </flow_mat>
        </itemfeedback>
